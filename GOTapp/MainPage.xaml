<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GOTapp.MainPage">

    <StackLayout>
     <ListView x:Name="actorlist" ItemSelected="actorlist_ItemSelected">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ImageCell Text="{Binding characterName}"
                               Detail="{Binding actorName}"
                               ImageSource="{Binding characterImageThumb}">
                    
                    </ImageCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>


    </StackLayout>

</ContentPage>
